{
  "name": "media recorder",
  "description": "extension for chrome that performs screen recording in any format and dimension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "media recorder",
    "default_popup": "popup.html"
  },
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "tabs", "activeTab", "storage"],
  "icons": {
    "16": "images/download-16x16.png",
    "32": "images/download-32x32.png",
    "144": "images/download-150x150.png",
    "192": "images/download-192x192.png",
    "512": "images/download-512x512.png"
  }
}
